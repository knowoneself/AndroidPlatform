<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
           <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="0.5dp" android:topRightRadius="5dp" android:topLeftRadius="0.5dp" />
           <solid  android:color="#3D98D1"/>
        </shape>
    </item>
      <item android:state_checked="true">
        <shape>
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="0.5dp" android:topRightRadius="5dp" android:topLeftRadius="0.5dp" />
            <solid  android:color="#3D98D1"/>
        </shape>
    </item>
    <item android:state_enabled="true"> 
        <shape >
           <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="0.5dp" android:topRightRadius="5dp" android:topLeftRadius="0.5dp" />
           <solid  android:color="#87CEEB"/>
           <!-- <stroke android:width="0.5dp" android:color="@android:color/white"/> -->
        </shape>
    </item>
    

</selector>
