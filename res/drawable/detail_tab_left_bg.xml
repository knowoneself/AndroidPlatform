<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:state_focused="true">
        <shape >
           <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="5dp" android:topRightRadius="0.5dp" />
           <solid  android:color="#3D98D1"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="5dp" android:topRightRadius="0.5dp" />
            <solid  android:color="#3D98D1"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
           <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="5dp" android:topRightRadius="0.5dp" />
           <solid  android:color="#3D98D1"/>
        </shape>
    </item>
    <item>
        <shape >
           <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="5dp" android:topRightRadius="0.5dp" />
           <solid  android:color="#87CEEB"/>
           <!--  <stroke android:width="0.5dp" android:color="@android:color/white"/>-->
        </shape>
    </item>
    

</selector>
